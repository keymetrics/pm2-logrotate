{
  "name": "pm2-logrotate",
  "version": "1.0.0",
  "description": "Module to rotate logs of every pm2 application - derived from pm2-logrotate 2.7.0",
  "main": "app.js",
  "dependencies": {
    "graceful-fs": "^4.2.2",
    "moment-timezone": "^0.5.11",
    "node-schedule": "^1.3.1",
    "pm2": "latest",
    "pmx": "latest"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Joni SHKURTI and EDot",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e-dot/pm2-logrotate.git"
  },
  "bugs": {
    "url": "https://github.com/e-dot/pm2-logrotate/issues"
  },
  "homepage": "https://github.com/e-dot/pm2-logrotate",
  "license": "MIT",
  "apps": [
    {
      "name": "pm2-logrotate",
      "script": "app.js",
      "max_memory_restart" : "500M"
    }
  ],
  "config": {
    "max_size": "10M",
    "retain": "30",
    "compress": false,
    "dateFormat": "YYYY-MM-DD_HH-mm-ss",
    "workerInterval": "30",
    "rotateInterval": "0 0 * * *",
    "rotateModule": true
  }
}
